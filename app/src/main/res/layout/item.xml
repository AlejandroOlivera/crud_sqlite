<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t_identificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identificacion">

        </TextView>

        <TextView
            android:id="@+id/t_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Colegio">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"

        android:orientation="vertical">

        <TextView
            android:id="@+id/t_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre">

        </TextView>

        <TextView
            android:id="@+id/t_departamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departamento">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"

        android:orientation="vertical">

        <TextView
            android:id="@+id/t_apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido">

        </TextView>

        <TextView
            android:id="@+id/t_ciudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t_colegio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colegio">

        </TextView>

        <TextView
            android:id="@+id/t_puntaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puntaje">


        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_modificar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="Modificar">

        </Button>

        <Button
            android:id="@+id/bt_eliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:text="Borrar">

        </Button>

    </LinearLayout>


</LinearLayout>